<html>
  <head>
    <title>Twitter Bootstrap Test</title>

    <script src='js/jquery.js'></script>
    <script src='js/bootstrap.js'></script>

    <!-- Styles -->
    <link href="css/bootstrap.css" rel="stylesheet">
    <style>
      body {
        /* makes container go all the way to the bottom of the topbar */
        padding-top: 60px;
      }
    </style>
  </head>

  <body>
    <div class="navbar navbar-fixed-top">
      <div class="navbar-inner">
        <div class="container">
          <a class="btn btn-navbar"
             data-toggle="collapse"
             data-target=".nav-collapse">
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </a>
          <a class="brand" href="#">Twitter Bootstrap Test</a>
          <div class="nav-collapse">
            <ul class="nav">
              <% MENU.each do |item| %>
                <% route = ROUTING[item] %>
                <li class="<%= 'active' if request.path_info == route %>">
                  <a href="<%= route %>"><%= item.to_s.capitalize %></a>
                </li>
              <% end %>
            </ul>
          </div>
        </div>
      </div>
    </div>

    <div class="container">
      <%= yield %>
    </div>
  </body>
</html>
